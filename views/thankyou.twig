  <a class="btn btn-success" href="add_case.php" role="button"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> {{ lang.return_to_submit_request }}</a>
  <a class="btn btn-info" href="print_sticker.php?uid={{ id }}&type=examination_request" target="_blank" role="button"><i class="fa fa-print"></i> {{ lang.print_sticker }}</a>
  <p>
  <div class="well">
    <p><b>{{ lang.notice|upper }}</b>
