{% endblock reroute %}
{% block content %}
<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
  <h1>{{ lang.examination_request_submitted }}, {{ lang.request_number }} {% if session.user.access <= 2 %}<a href="edit_request.php?case={{id}}">{{ case_id }}</a>{% else %}{{ case_id}}{% endif %}.</h1>
