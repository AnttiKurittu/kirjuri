                      <input type="hidden" name="flag2" value="-">
                      <input type="checkbox" name="flag2" value="M"> {{ lang.flag_mobile }}
                    </label>
                  </div>

                  <div class="checkbox">
                     <label class="col-md-12">
                       <input type="hidden" name="flag3" value="-">
                       <input type="checkbox" name="flag3" value="A"> {{ lang.api_access }}
